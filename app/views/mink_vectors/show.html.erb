<h3><%= @scop_domain.sid %></h3>

<table id="mink_vector" align="center" class="mink">
  <tr>
    <th colspan=4>
      SCOP Classification
    </th>
    <td colspan=2 rowspan=8 align="center">
      <div id="image">
        <%= image_tag @scop_domain.big_image, :width => 250, :border => 0 %>
      </div>
    </td>
  </tr>
  <tr>
    <td class="title">
      Class
    </td>
    <td colspan=3>
      <%= @scop_domain.scop_class.description  %>
    </td>
  </tr>
  <tr>
    <td class="title">
      Fold
    </td>
    <td colspan=3>
      <%= @scop_domain.scop_fold.description  %>
    </td>
  </tr>
  <tr>
    <td class="title">
      Superfamily
    </td>
    <td colspan=3>
      <%= @scop_domain.scop_superfamily.description %>
    </td>
  </tr>
  <tr>
    <td class="title">
      Family
    </td>
    <td colspan=3>
      <%= @scop_domain.scop_family.description %>
    </td>
  </tr>
  <tr>
    <td class="title">
      Protein
    </td>
    <td colspan=3>
      <%= @scop_domain.scop_protein.description %>
    </td>
  </tr>
  <tr>
    <td class="title">
      Species
    </td>
    <td colspan=3>
      <%= @scop_domain.scop_species.description %>
    </td>
  </tr>
  <tr>
    <td class="title">
      Domain
    </td>
    <td colspan=3>
      <%= @scop_domain.description %>
    </td>
  </tr>
  <tr>
    <th colspan=6>
      Similar SCOP Domains based on MINK vector distance
    </th>
  </tr>
  <tr>
    <td colspan=2>
      D1
    </td>
    <td colspan=2>
      D2
    </td>
    <td colspan=2>
      D3
    </td>
  </tr>
</table>
